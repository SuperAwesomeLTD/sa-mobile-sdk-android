<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="0dp"
                tools:context="tv.superawesome.sdk.activities.SAVideoActivity">

    <fragment android:name="tv.superawesome.sdk.fragments.SAVideoFragment"
              android:id="@+id/sa_video_ad"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              custom:placementID=""
              custom:testMode="true"
              custom:showInstantly="true"
              custom:playInstantly="true" />

    <Button android:id="@+id/sa_close_fscreen_video"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:layout_alignParentBottom="true"
            android:textColor="#ffffff"
            android:background="#000000"
            android:visibility="invisible"
            android:text="Skip" />


</RelativeLayout>
