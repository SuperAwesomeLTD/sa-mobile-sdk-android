<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdMobActivity"
    android:padding="10dp" >

    <Button
        android:layout_width="match_parent"
        android:text="@string/play_admob_interstitial"
        android:onClick="playInterstitial"
        android:layout_height="50dp"
        android:layout_margin="8dp"/>
    <Button
        android:text="@string/play_admob_video"
        android:layout_width="match_parent"
        android:onClick="playVideo"
        android:layout_height="50dp"
        android:layout_margin="8dp"/>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:background="@color/color_status_bar"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/admob_banner_ad_id"
        android:layout_margin="8dp"/>

</LinearLayout>
